" Minhas confs vim
" Description: Minhas customizações no 'vim'
" Author: Kaio Cesar (Aresi)

set history=1000
set nocompatible
filetype plugin on
filetype indent on


set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

set autoindent
set number
set showmatch
set hlsearch

colorscheme desert
set background=dark

syntax on


" Spaços
set tabstop=2
set shiftwidth=2


